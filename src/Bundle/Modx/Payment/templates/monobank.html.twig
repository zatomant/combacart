<div class="card bgg mt-3">
    <div class="card-body text-center mb-2">
        <p class="text-start mb-1">
            <span class="badge text-bg-secondary">monobank</span>
        </p>
        {% if pt.ptcontent and not pt.ptcontent.error %}
            {{ lang.payment_bank_note_inline }}{{ doc.doc_number }}
            <br>
            {{ lang.payment_bank_amount|lower }}
            <p class="h5"><strong>{{ doc.doc_paysum|number_format(2, '.', '') }} грн</strong></p>
            {% if pt.ptcontent.form %}
                <a href="{{ pt.ptcontent.form|raw }}" class="btn btn-success"><i class="bi bi-credit-card-2-back-fill"></i> {{ lang.action_pay }}</a>
            {% endif %}
        {% else %}
            {{ include([page.language ~ '/pt_online_disabled.html.twig', 'pt_online_disabled.html.twig'])|raw }}
        {% endif %}
    </div>
</div>
