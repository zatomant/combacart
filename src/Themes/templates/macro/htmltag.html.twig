{% macro plurals(number, plurals) %}
{% apply spaceless %}
    {% if plurals is empty %}
        {% set plurals = ['товар','товара','товарів'] %}
    {% endif %}

    {% set number = number % 100 %}

    {% if number >= 11 and number <= 19 %}
        {% set ending = plurals[2] %}
    {% else %}

        {% set i = number % 10 %}

        {% if i == 1 %}
            {% set ending = plurals[0] %}
        {% elseif i in [2,3,4] %}
            {% set ending = plurals[1] %}
        {% else %}
            {% set ending = plurals[2] %}
        {% endif %}
    {% endif %}
    {{ ending }}
{% endapply %}
{% endmacro %}

