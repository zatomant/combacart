{% macro formatname(str, delim = ' ', limit = 3) %}
{% apply spaceless %}
    {% set out = str|trim|split(delim) %}
    {% set limit = limit - 1 %}
    {% set start = 1 %}
    {% if out|length <= 1 %}
        {% set limit = 1 %}
        {% set start = 0 %}
    {% endif %}
    {% for value in out|slice(start, limit) %}{{ value|raw }} {% endfor %}
{% endapply %}
{% endmacro %}
